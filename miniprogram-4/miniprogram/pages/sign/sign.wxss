/* miniprogram/pages/sign/sign.wxss */
.buttonview {  
  display: flex;
}

.userinfo1 {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 150px;
}

.userinfo-avatar1 {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname1 {
  color: #aaa;
}
.userinfo-nickname2 {
  align-items: center;
  font-size: 32rpx;
  color: #FFFFFF;
  background-color: #eb592d;
  background-size: cover;
  margin-top: 10rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.usermotto1 {
  margin-top: 20px;
}
.Meeting1 {
  margin-top: 20px;
}
.log-list {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
}
.log-item {
  margin: 10rpx;
}
.userinfo, .uploader, .tunnel {
  margin-top: 40rpx;
  height: 140rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}
.table {
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
}
.td {
    width:40%;
    text-align: center;  
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
    padding:5px
}
.bg-w{
  background: snow;
}
.bg-g{
  background:#aaa;
}
.th {
  width: 40%;
  justify-content: center;
  background: #00BFFF;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
}
.template{
  justify-content: center;
  width: 94%;
  background: #98FB98;
  white-space: nowrap;
  font-size: 1rem;
  border-radius: 13px;
  padding-bottom: 3px;
  margin-top: 5px;
  margin-left: 3%;
  margin-right: 3%;
}
.item{
  display:flex;
  flex-direction:column;
  margin-left:3%;
  margin-right: 3%;
  margin-top:5px;
  overflow: hidden;
  text-overflow:ellipsis;
}